<tool id="hello_world" name="hello world" version="0.1.0">
    <requirements>
    </requirements>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        bash $__tool_directory__/hello_world.sh -i "$input1" -o "$output1"
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="in" label="input" />
    </inputs>
    <outputs>
        <data name="output1" format="out" label="output"/>
    </outputs>
    <tests>
        <test>
            <param name="input1" value="hello_world/hello_world.in"/>
            <output name="output1" file="hello_world/hello_world.out"/>
        </test>
    </tests>
    <help><![CDATA[
        
hello_world.sh replaces the word world by mars
usage:
hello_world.sh -i <FILE> -o <FILE>

    ]]></help>
</tool>